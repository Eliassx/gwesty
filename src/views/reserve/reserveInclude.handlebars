<section class="main">
    <div class="side-bar">
        <div class="blue">
            <div class="official">
                <img src="../assets/svg/User.svg" alt="" class="official-photo">
                <div class="name-function">
                    {{#each official}}
                    <strong class="name">{{this.name}}</strong>
                    {{/each}}
                </div>
            </div>

            <div class="nav">
                <a href="/home">
                    <div class="home list" id="home" onclick="select(this.id)">
                        <img src="../assets/svg/home.svg" alt="">
                        <p>Home</p>
                    </div>
                </a>

                <div class="auxiliary list" id="auxiliary" onclick="select(this.id)">
                    <div class="auxiliary-name">
                        <img src="../assets/svg/cadastrar.svg" alt="" class="auxiliary-photo">
                        <p>Cadastrar Auxiliares</p>
                        <img src="../assets/svg/seta.svg" alt="" id="arrow">
                    </div>
                </div>

                <div class="auxiliary list" id="auxiliaryy" onclick="closeNav()">
                    <div class="auxiliary-name">
                        <img src="../assets/svg/cadastrar.svg" alt="" class="auxiliary-photo">
                        <p>Cadastrar Auxiliares</p>
                        <img src="../assets/svg/seta-baixo.svg" alt="" id="arrow2">
                    </div>

                    <div class="auxiliary-nav" id="auxiliary-nav">
                        <a href="/products"><p>Produtos</p></a>
                        <a href="/services"><p>Serviços</p></a>
                        <a href="/noun"><p>Acomodações</p></a>
                    </div>
                </div>

                <a href="/guests">
                    <div class="guests list" id="guests" onclick="select(this.id)">
                        <img src="../assets/svg/cadastrar-h.svg" alt="">
                        <p>Cadastrar Hóspedes</p>
                    </div>
                </a>

                <a href="/reserve">
                    <div class="host list" id="host" onclick="select(this.id)">
                        <img src="../assets/svg/cama.svg" alt="">
                        <p>Reservar/Hospedar</p>
                    </div>
                </a>
                        
                <a href="/stocks">
                    <div class="stocks list" id="stocks" onclick="select(this.id)">
                        <img src="../assets/svg/caixa.svg" alt="">
                        <p>Registrar Estoque</p>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="mainn">
        <div class="semi-red">
            <div class="welcome-img">
                <p>Seja bem-vindo(a) ao Gwesty:</p>
                <img src="../assets/svg/logo.svg" alt="">
            </div>

            <a href="/">
                <div class="logout">
                    <p>Sair</p>
                    <img src="../assets/svg/sair.svg" alt="">
                </div>
            </a>
        </div>

        <div class="content">
            <div class="headerr">
                <img src="../assets/svg/camaBlue.svg" alt="">
                <h2>Reservar/Hospedar</h2> 
            </div>

           <div class="box-contentt">
              <form action="/registerReserve" method="post">
                <div class="form-content">
                    <label for="client">Hóspede</label>
                    <input type="text" class="form-control" id="client" name="client">
                </div>

                <div class="form-content">
                    <label for="noun">Acomodação</label>
                    <input type="text" class="form-control" id="noun" name="noun">
                </div>

                <div class="form-content">
                    <label for="quantity">Quantidade de Hóspedes</label>
                    <input type="number" class="form-control" id="quantity" name="quantity">
                </div>

                <div class="dates_values">
                    <div class="column1">
                        <div class="form-content">
                            <label for="description">Data da Reserva</label>
                            <input type="date" class="form-control" id="date_reserve" name="date_reserve">
                        </div>

                        <div class="form-content">
                            <label for="description">Entrada Prevista</label>
                            <input type="date" class="form-control" id="join_provided" name="join_provided">
                        </div>

                        <div class="form-content">
                            <label for="description">Entrada Efetiva</label>
                            <input type="date" class="form-control" id="join_effective" name="join_effective" onchange="calculate()">
                        </div>

                        <div class="form-content">
                            <label for="description">Valor da Reserva</label>
                            <input type="number" class="form-control" id="reserve_value" name="reserve_value" onchange="calculate()">
                        </div>

                        <div class="form-content">
                            <label for="description">Antecipação de R$</label>
                            <input type="number" class="form-control" id="anticipation_value" name="anticipation_value" onchange="calculate()">
                        </div>
                    </div>

                    <div class="column2">
                        <div class="form-content">
                            <label for="date_confirm">Data de Confirmação</label>
                            <input type="date" class="form-control" id="date_confirm" name="date_confirm">
                        </div>

                        <div class="form-content">
                            <label for="description">Saída Prevista</label>
                            <input type="date" class="form-control" id="leave_provided" name="leave_provided">
                        </div>

                        <div class="form-content">
                            <label for="description">Saída Efetiva</label>
                            <input type="date" class="form-control" id="leave_effective" name="leave_effective" onchange="calculate()">
                        </div>

                        <div class="form-content">
                            <label for="description">Valor de Consumo</label>
                            <input type="number" class="form-control" id="comsuption_value" name="comsuption_value" onchange="calculate()">
                        </div>

                        <div class="form-content">
                            <label for="description">Valor Pago</label>
                            <input type="number" class="form-control" id="pay_value" name="pay_value">
                        </div>
                    </div>
                </div>
                <div class="form-buttons">
                    <a href="/services"><button type="button" class="btn-cancel">Cancelar</button></a>
                    <button type="submit" class="btn-confirm">Confirmar</button>
                </div>
              </form>
           </div>
        </div>
    </div>
</section>