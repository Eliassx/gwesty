           <div class="box-contentt">
              <form action="/registerProducts" method="post">
                <div class="form-content">
                    <label for="description">Descrição</label>
                    <input type="text" class="form-control" id="description" name="description">
                </div>

                <div class="form-content">
                    <label for="type">Tipo</label>
                    <input type="text" class="form-control" id="type" name="type">
                </div>

                <div class="form-content">
                    <label for="description">Data de Cadastro</label>
                    <input type="date" class="form-control" id="date" name="date_products">
                </div>


                <div class="form-content">
                    <label for="description">Valor</label>
                    <input type="text" class="form-control" id="valor" name="valor">
                </div>

                <div class="form-content">
                    <label for="description">Observações</label>
                    <textarea name="obs" id="obss" cols="30" rows="4"></textarea>
                </div>

                <div class="form-buttons">
                    <a href="/products"><button type="button" class="btn-cancel">Cancelar</button></a>
                    <button type="submit" class="btn-confirm">Confirmar</button>
                </div>
              </form>
